<section>
  <div class="row">

    <div class="col-12 col-md-12 col-lg-10">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Data Nominal</h6>

          <a href="/nominal-create" class="btn btn-primary waves-effect">
            <i data-feather="plus"></i> Buat Nomimal
          </a>
        </div>
        <div class="card-body">
          <table id="nominal-datatable" class="datatables-basic table table-responsive-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Nominal</th>
                <th>Nama Koin</th>
                <th>Harga</th>
                <th>Deskripsi</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% let no = 1 %>
              <% nominals && nominals.forEach(nm => { %>

              <% const price = nm.price.toLocaleString("id", {
                style: "currency",
                currency: "IDR",
              }); %>
              <tr>
                <td><%= nm.nominal_id  %></td>
                <td><%= nm.coin_quantity  %></td>
                <td><%= nm.coin_name  %></td>
                <td><%= price  %></td>
                <td><%= nm.description  %></td>
                <td data-order="false" class="  ">
                  <form action="/nominal/<%= nm.nominal_id %>" method="post">
                    <div class=" d-flex ">
                      <a href="/nominal-edit/<%= nm.nominal_id %>"
                        class="btn btn-icon rounded-circle btn-flat-primary waves-effect">
                        <i data-feather="edit"></i>
                      </a>
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-icon rounded-circle ms-5px btn-flat-danger waves-effect">
                        <i data-feather="trash"></i>
                      </button>
                    </div>
                  </form>
                </td>
              </tr>
              <%  }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>