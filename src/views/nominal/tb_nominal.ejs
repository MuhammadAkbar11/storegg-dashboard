<section>
  <div class="row">

    <div class="col-12 col-md-12 col-lg-10">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Data Nominal</h6>

          <a href="/nominal-create" class="btn btn-primary waves-effect">
            <i data-feather="plus"></i> Buat Nomimal
          </a>
        </div>
        <div class="card-body">
          <table id="nominal-datatable" class="datatables-basic table table-responsive-sm">
            <thead>
              <tr>
                <th>No</th>
                <th>Nominal</th>
                <th>Nama Koin</th>
                <th>Harga</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% let no = 1 %>
              <% nominals && nominals.forEach(nm => { %>

              <% const price = nm.price.toLocaleString("id", {
                style: "currency",
                currency: "IDR",
              }); %>
              <tr>
                <td><%= no++  %></td>
                <td><%= nm.coin_quantity  %></td>
                <td><%= nm.coin_name  %></td>
                <td><%= price  %></td>
                <td data-order="false">
                  <form action="/nominal/<%= nm.nominal_id %>" method="post">
                    <a href="/nominal-edit/<%= nm.nominal_id %>" class="btn btn-icon btn-flat-primary waves-effect">
                      <small>Ubah</small>
                    </a>
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-icon btn-icon ms-5px btn-flat-danger waves-effect">
                      <small>Hapus</small>
                    </button>
                  </form>
                </td>
              </tr>
              <%  }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>