<section>
  <div class="row">

    <div class="col-12 col-md-12 col-lg-10">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Data Nominal</h6>

          <a href="/create-nominal" class="btn btn-primary">
            <i data-feather="plus"></i> Buat Nomimal
          </a>
        </div>
        <div class="card-body">
          <table id="nominal-datatable" class="datatables-basic table table-responsive-sm">
            <thead>
              <tr>
                <th>No</th>
                <th>Nama Koin</th>
                <th>Nominal</th>
                <th>Harga</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% let no = 1 %>
              <% nominals && nominals.forEach(nm => { %>
              <tr>
                <td><%= no++  %></td>
                <td><%= nm.coinName  %></td>
                <td><%= nm.coinNominal  %></td>
                <td><%= nm.price  %></td>
                <td data-order="false">
                  <form action="/nominal/<%= nm._id %>" method="post">
                    <a href="/nominal-edit/<%= nm._id %>"
                      class="btn btn-icon rounded-circle btn-flat-primary waves-effect">
                      <i data-feather="edit"></i>
                    </a>
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-icon btn-icon rounded-circle btn-flat-danger waves-effect">
                      <i data-feather="trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <%  }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>