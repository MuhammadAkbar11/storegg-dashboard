<%- include('../layouts/head.ejs') %>

<%- include("../layouts/header.ejs") %>
<%- include("../layouts/sidebar.ejs") %>

<%- include("../includes/toast.ejs") %>

<div class="app-content content ">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row">
      <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
          <div class="col-12">
            <h2 class="content-header-title float-start mb-0"> <%= title %></h2>
            <div class="breadcrumb-wrapper">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a>
                </li>
                <li class="breadcrumb-item"><a href="/nominal">Nomial</a>
                </li>
                <li class="breadcrumb-item active"><%= title %>
                </li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <%- include("../includes/content-header.ejs")  %>
    </div>
    <div class="content-body">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6">
          <div class="card">
            <div class="card-body">
              <form class="form form-vertical" action="/nominal" method="post">
                <input type="hidden" name="_method" value="POST">
                <div class="row">
                  <div class="col-12">
                    <div class="mb-1">
                      <label class="form-label" for="coinName">Nama Koin</label>
                      <input type="text" id="coinName" class="form-control" name="coinName" placeholder="Name Koin"
                        value="<%= errors?.renderData?.values?.coinName  %>" />
                      <% if(errors && errors?.validation?.coinName) {  %>
                      <small class=" text-danger "><%= errors?.validation?.coinName?.message[0] %></small>
                      <% } %>
                    </div>
                    <div class="mb-1">
                      <label class="form-label" for="coinQuantity">Nominal</label>
                      <input type="number" id="coinQuantity" class="form-control" name="coinQuantity"
                        placeholder="Nominal" value="<%= errors?.renderData?.values?.coinQuantity  %>" />
                      <% if(errors && errors?.validation?.coinQuantity) {  %>
                      <small class=" text-danger "> <%= errors?.validation?.coinQuantity?.message[0] %></small>
                      <% } %>
                    </div>
                    <div class="mb-1">
                      <label class="form-label" for="price">Harga</label>
                      <input type="number" id="price" class="form-control" name="price" placeholder="Harga"
                        value="<%= errors?.renderData?.values?.price  %>" />
                      <% if(errors && errors?.validation?.price) {  %>
                      <small class=" text-danger "> <%= errors?.validation?.price?.message[0] %></small>
                      <% } %>
                    </div>
                    <div class="mb-1">
                      <label class="form-label" for="description">Deskripsi</label>
                      <textarea class="form-control" id="description" name="description" rows="3"
                        placeholder="Textarea"><%= errors && errors?.renderData?.values?.description || "" %></textarea>
                      <% if(errors && errors?.validation?.description) {  %>
                      <small class=" text-danger "> <%= errors?.validation?.description?.message[0] %></small>
                      <% } %>
                    </div>
                  </div>



                  <div class="col-12">
                    <a href="/nominal" class=" btn btn-link text-secondary  me-5px">Batal</a>
                    <button type="submit" class="btn btn-primary me-1">Simpan </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>


      </div>

    </div>
  </div>
</div>
<!-- END: Content-->


<%- include('../layouts/footer.ejs') %>

<%- include('../layouts/end.ejs') %>