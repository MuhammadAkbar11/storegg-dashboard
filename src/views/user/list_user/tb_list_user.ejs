<section>
  <div class="row">
    <div class="col-lg-3 col-sm-6">
      <div class="card">
        <div class="card-body d-flex align-items-center justify-content-between">
          <div>
            <h3 class="fw-bolder mb-75"><%= countUsers  %> </h3>
            <span>Total Users</span>
          </div>
          <div class="avatar bg-light-primary p-50">
            <span class="avatar-content">
              <i data-feather="user" class="font-medium-4"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="card">
        <div class="card-body d-flex align-items-center justify-content-between">
          <div>
            <h3 class="fw-bolder mb-75"><%= countPlayers  %> </h3>
            <span>Player Users</span>
          </div>
          <div class="avatar bg-light-danger p-50">
            <span class="avatar-content">
              <i data-feather="user-plus" class="font-medium-4"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="card">
        <div class="card-body d-flex align-items-center justify-content-between">
          <div>
            <h3 class="fw-bolder mb-75"><%= countActive  %> </h3>
            <span>Active Users</span>
          </div>
          <div class="avatar bg-light-success p-50">
            <span class="avatar-content">
              <i data-feather="user-check" class="font-medium-4"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6">
      <div class="card">
        <div class="card-body d-flex align-items-center justify-content-between">
          <div>
            <h3 class="fw-bolder mb-75"><%= countPending  %> </h3>
            <span>Pending Users</span>
          </div>
          <div class="avatar bg-light-warning p-50">
            <span class="avatar-content">
              <i data-feather="user-x" class="font-medium-4"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-12 col-md-12 ">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Data Users</h6>


        </div>
        <div class="card-body">
          <table id="user-datatable" class="datatables-basic table table-responsive">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th class="text-nowrap ">Username</th>
                <th>Role</th>
                <th class=" text-nowrap ">Date Join</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% let no = 1 %>
              <% users && users.forEach(usr => { %>

              <tr>
                <td><%= usr.user_id  %></td>
                <td>
                  <div class="d-flex justify-content-left align-items-center">
                    <div class="avatar-wrapper">
                      <div class="avatar me-1"><img src="<%= usr.avatar %>" alt="Avatar" height="32" width="32"></div>
                    </div>
                    <div class="d-flex flex-column">
                      <a href="/users/<%= usr.user_id %>" class="user_name text-truncate text-body"><span
                          class="fw-bolder"><%= usr.name %> </span></a><small class="emp_post text-muted">
                        <%= usr.email  %></small></div>
                  </div>
                  <!-- <div class="d-flex gap-1">
                    <img height="80" src="<%= usr.avatar  %>" alt="">
                    <%= usr.email  %>
                  </div> -->
                </td>
                <td>
                  <%= usr.username  %>
                </td>
                <td>

                  <% if(usr.role.trim() == "SUPER_ADMIN") { %>
                  <span class="text-truncate align-middle">
                    <i data-feather="settings" class=" font-medium-3 text-danger me-50">
                    </i>Super admin</span>
                  <% } else if(usr.role.trim() == "ADMIN") {  %>
                  <span class="text-truncate align-middle">
                    <i data-feather="slack" class=" font-medium-3 text-info me-50">
                    </i>Admin</span>
                  <% } else if(usr.role.trim() == "PLAYER") {  %>
                  <span class="text-truncate align-middle">
                    <i data-feather="user" class=" font-medium-3 text-primary me-50">
                    </i>Player</span>
                  <% } %>
                </td>
                <td class=" text-nowrap ">
                  <%= usr.created_at  %>
                </td>
                <td>
                  <% if(usr?.status == "ACTIVE")  { %>
                  <span class="badge badge-light-success text-capitalize">Active </span>
                  <% } else if (usr?.status === "PENDING") { %>
                  <span class="badge badge-light-warning text-capitalize ">Pending</span>
                  <% } else { %>
                  <span class="badge badge-light-secondary text-capitalize">Inactive</span>
                  <% } %>
                </td>
                <td data-order="false">
                  <div class="d-flex">
                    <!-- <form action="/user/status/<%= usr.user_id %>" method="POST" style="display: inline-block;">
                      <input type="hidden" name="status" value="<%= usr?.status  %>">
                      <input type="hidden" name="_method" value="PUT">
                      <% if(usr?.status === 'Y') { %>
                      <button class="btn btn-icon rounded-circle btn-flat-danger waves-effect" data-bs-toggle="tooltip"
                        data-bs-placement="top" title="Nonaktifkan Voucher">
                        <i data-feather='minus-square'></i>
                      </button>
                      <% } else { %>
                      <button class="btn btn-icon rounded-circle btn-flat-success waves-effect" data-bs-toggle="tooltip"
                        data-bs-placement="top" title="Aktifkan Voucher">
                        <i data-feather='check-square'></i>
                      </button>
                      <% } %>

                    </form> -->
                    <div>
                      <a href="/users/<%= usr.user_id %>"
                        class="btn btn-icon rounded-circle btn-flat-primary waves-effect">
                        <i data-feather="info"></i>
                      </a>
                    </div>
                    <% if(userAuth.user_id !== usr.user_id ) { %>

                    <% if(usr.role.trim() == "PLAYER") { %>
                    <form action="/user/<%= usr.user_id %>" method="post">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-icon btn-icon rounded-circle btn-flat-danger waves-effect">
                        <i data-feather="trash"></i>
                      </button>
                    </form>
                    <% } %>
                    <% } %>

                  </div>
                </td>
              </tr>
              <%  }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>